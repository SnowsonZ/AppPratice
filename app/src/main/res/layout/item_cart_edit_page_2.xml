<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlayout_edit"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="6dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_sub"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_tv_goods_count"
                android:gravity="center"
                android:text="—"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_count_edit"
                style="@style/contentTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3px"
                android:layout_weight="1"
                android:background="@drawable/shape_tv_goods_count"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:text="4" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_add"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3px"
                android:background="@drawable/shape_tv_goods_count"
                android:gravity="center"
                android:text="+"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_goods_type_edit"
            style="@style/contentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_tv_goods_count"
            android:cursorVisible="false"
            android:paddingStart="4dp"
            android:gravity="start|center_vertical"
            android:inputType="number"
            android:text="黑色 XL" />


    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_goods_delete"
        style="@style/contentTextStyle"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>