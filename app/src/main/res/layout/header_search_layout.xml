<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_header_search"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/leftarrow" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/white_border"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="4dp"
        android:hint="搜索商品"
        android:minHeight="20dp"
        android:padding="6dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <FrameLayout
            android:id="@+id/flayout_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10px">

            <ImageView
                android:id="@+id/fragment_home_iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/message" />

            <ImageView
                android:id="@+id/fragment_home_iv_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end"
                android:src="@drawable/red_dot3"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_header_search"
            style="@style/contentTextStyle"
            android:minHeight="25sp"
            android:minWidth="25sp"
            android:textColor="@android:color/holo_red_light"
            android:text="搜索 " />

    </FrameLayout>

</LinearLayout>