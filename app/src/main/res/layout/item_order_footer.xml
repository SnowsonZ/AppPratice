<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="80dp"
        android:minHeight="60dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/llayout_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="8dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_amout"
                style="@style/contentTextStyle"
                android:text="共10件商品" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_price_amount"
                style="@style/contentTextStyle"
                android:layout_marginStart="8dp"
                android:text="合计：￥999.34"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/llayout_amount"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_cancel"
                style="@style/orderStatusTextStyle"
                android:layout_marginEnd="10dp"
                android:text="取消订单" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_current_location"
                style="@style/orderStatusTextStyle"
                android:layout_marginEnd="10dp"
                android:text="查看物流" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_pay"
                style="@style/orderStatusTextStyle"
                android:layout_marginEnd="10dp"
                android:text="付款"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_get"
                style="@style/orderStatusTextStyle"
                android:text="确认收货" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>