<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_edit"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/iv_goods_type_detail"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/iv_goods_type_detail">

        <LinearLayout
            android:layout_width="132dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods_sub"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_sub"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_tv_goods_count"
                android:gravity="center"
                android:text="—"
                android:textSize="12sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_count_edit"
                style="@style/contentTextStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3px"
                android:background="@drawable/shape_tv_goods_count"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:text="4" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_goods_add"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3px"
                android:background="@drawable/shape_tv_goods_count"
                android:gravity="center"
                android:text="+"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_goods_add"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_goods_type_edit"
            style="@style/contentTextStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:text="手机的付款了圣诞节饭"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</RelativeLayout>