<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimScale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_scale_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_scale_exit</item>
    </style>

    <style name="DialogAnimL2R" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_left_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_left_exit</item>
    </style>

    <style name="DialogAnimR2L" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_right_exit</item>
    </style>

    <style name="DialogAnimT2B" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_top_exit</item>
    </style>

    <style name="DialogAnimB2T" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_down_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down_exit</item>
    </style>

    <style name="titleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="subTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contentTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="orderStatusTextStyle" parent="contentTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/shape_order_status</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="buttonTextStyle" parent="contentTextStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="alertTextStyle" parent="contentTextStyle">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>
